@section PageTitle { Opacity Adjustment Filter }

@section SubTitle { Adjusts the opacity of an image }

<pre>
@@Html.DynamicImageTag(b => b
	.WithLayer(
		LayerBuilder.Image.SourceFile("~/Assets/Images/AutumnLeaves.jpg")
			.WithFilter(FilterBuilder.Resize.To(500, 500))
	)
	.WithLayer(
		LayerBuilder.Image.SourceFile("~/Assets/Images/Forest.jpg").X(25).Y(25)
			.WithFilter(FilterBuilder.Resize.To(500, 500))
			.WithFilter(FilterBuilder.AdjustOpacity.Opacity(50))
	)
)
</pre>

<p>
	@Html.DynamicImageTag(b => b
		.WithLayer(
			LayerBuilder.Image.SourceFile("~/Assets/Images/AutumnLeaves.jpg")
				.WithFilter(FilterBuilder.Resize.To(500, 500))
		)
		.WithLayer(
			LayerBuilder.Image.SourceFile("~/Assets/Images/Forest.jpg").X(25).Y(25)
				.WithFilter(FilterBuilder.Resize.To(500, 500))
				.WithFilter(FilterBuilder.AdjustOpacity.Opacity(50))
		)
	)
</p>